<main>
  <%= render :partial => "shared/user_container", locals: { :user => @user }%>
  <div class="bio-container">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  
    <ul class="posts-container">
      <%
        for post0 in @user.last_posts do
        post = Post.includes([:author]).find(post0.id)
      %>
        
          <li>
          <%= render :partial => "shared/post_container", locals: { :post => post, onClick: "" }%>
          </li>
        
      <% end %>
    </ul>

    <%= link_to user_posts_path(@user) do %>
    <button type="button">View All Posts</button>
    <% end %>
  
</main>