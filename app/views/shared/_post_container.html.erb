<div class="post">
  <%if (can? :manage, post) || post.author == current_user%>
    <%= button_to "Delete", user_post_path(post.author, post), action: "destroy", method: :delete, class:"btn"%>
  <%end%>
  <%= form_with model: Like.new, url: "/like/" + post.id.to_s do |form| %>
  
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.submit "Like" %>
  <% end %>
  <%= link_to onClick do %>
  <h4><%= post.title %></h4>
  <p><%= post.text %></p>
  Comments: <% if !post.commentscounter then %> <%= 0 %> <%else%> <%=post.commentscounter%><%end%>
  Likes: <% if !post.likescounter then %> <%= 0 %> <%else%> <%=post.likescounter%><%end%>
  <%end%>
</div>